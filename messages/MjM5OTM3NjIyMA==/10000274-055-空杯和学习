        var onBridgeReady =  function () {
          var 
            appId  = '',
			      imgUrl = "http://mmsns.qpic.cn/mmsns/DibgiaTFa6LwcTTv2uYYdHz8bdxv7FoXAKUd3LepJgBAWdG4V5AC15aA/0",
