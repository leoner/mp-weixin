        var onBridgeReady =  function () {
          var 
            appId  = '',
			      imgUrl = "http://mmsns.qpic.cn/mmsns/DibgiaTFa6LwdYJKSFVpU0RGBu3fBp5Qiba9S0oKmuLSxHO7PhhHCnxxQ/0",
			      link   = "http://mp.weixin.qq.com/mp/appmsg/show?__biz=MjM5OTM3NjIyMA==&appmsgid=10000133&itemidx=1#wechat_redirect",
						title  = htmlDecode("a5-莫言：悠着点，慢着点"),
            desc   = htmlDecode("我们应该用我们的文学作品向人们传达许多最基本的道理：譬如房子是盖了住的，不是用来炒的；如果房子盖了不住，那房子就不是房子。"),
            fakeid = "",
            desc = desc || link;	



					// 发送给好友; 
          WeixinJSBridge.on('menu:share:appmessage', function(argv){
            
						WeixinJSBridge.invoke('sendAppMessage',{
											  "appid"      : appId,
											  "img_url"    : imgUrl,
											  "img_width"  : "640",
											  "img_height" : "640",
