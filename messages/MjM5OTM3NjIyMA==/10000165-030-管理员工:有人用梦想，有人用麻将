        var onBridgeReady =  function () {
          var 
            appId  = '',
			      imgUrl = "http://mmsns.qpic.cn/mmsns/DibgiaTFa6LwcTTv2uYYdHz8bdxv7FoXAKcFfD27xkOlCY9RhfBicTpgQ/0",
			      link   = "http://mp.weixin.qq.com/mp/appmsg/show?__biz=MjM5OTM3NjIyMA==&appmsgid=10000165&itemidx=1#wechat_redirect",
