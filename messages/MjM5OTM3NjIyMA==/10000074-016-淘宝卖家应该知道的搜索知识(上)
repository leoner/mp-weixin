            appId  = '',
			      imgUrl = "http://mmsns.qpic.cn/mmsns/DibgiaTFa6LwcTTv2uYYdHz8bdxv7FoXAKnWleIJJ1KLHKoNib8Z6bX6w/0",
			      link   = "http://mp.weixin.qq.com/mp/appmsg/show?__biz=MjM5OTM3NjIyMA==&appmsgid=10000074&itemidx=1#wechat_redirect",
						title  = htmlDecode("016-淘宝卖家应该知道的搜索知识(上)"),
            desc   = htmlDecode("这么多搜索的信息，卖家到底应该了解哪些？到哪里去了解？<br/>这篇文章就是回答这些问题的。"),
            fakeid = "",
            desc = desc || link;	



					// 发送给好友; 
          WeixinJSBridge.on('menu:share:appmessage', function(argv){
            
						WeixinJSBridge.invoke('sendAppMessage',{
											  "appid"      : appId,
											  "img_url"    : imgUrl,
											  "img_width"  : "640",
											  "img_height" : "640",
