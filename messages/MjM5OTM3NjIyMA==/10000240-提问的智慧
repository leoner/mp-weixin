        var onBridgeReady =  function () {
          var 
            appId  = '',
			      imgUrl = "http://mmsns.qpic.cn/mmsns/DibgiaTFa6LwdYJKSFVpU0RGBu3fBp5Qibau8s4FwicxD9ezibCDjicGk8ZA/0",
			      link   = "http://mp.weixin.qq.com/mp/appmsg/show?__biz=MjM5OTM3NjIyMA==&appmsgid=10000240&itemidx=1#wechat_redirect",
						title  = htmlDecode("提问的智慧"),
            desc   = htmlDecode("想好自己应该如何提问，其实已经得到了答案的一半。"),
            fakeid = "",
            desc = desc || link;	



					// 发送给好友; 
          WeixinJSBridge.on('menu:share:appmessage', function(argv){
            
						WeixinJSBridge.invoke('sendAppMessage',{
											  "appid"      : appId,
											  "img_url"    : imgUrl,
											  "img_width"  : "640",
											  "img_height" : "640",
											  "link"       : share_scene(link, 1),
											  "desc"       : desc,
											  "title"      : title
                        }, function(res) {report(link, fakeid, 1);
                        });
					});
					// 分享到朋友圈;
          WeixinJSBridge.on('menu:share:timeline', function(argv){
